<?xml version="1.0" encoding="utf-8" ?>
<widget id="cn.yanjiashuo.easybrew" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EasyBrew</name>
    <description>
        A easy way to manage your brew
    </description>
    <author email="303764416@qq.com" href="http://cordova.io">
        岩嘉硕软件工作室
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="osx">
        <icon height="16" src="res/osx/icon/icon-16.png" width="16" />
        <icon height="32" src="res/osx/icon/icon-32.png" width="32" />
        <icon height="64" src="res/osx/icon/icon-64.png" width="64" />
        <icon height="128" src="res/osx/icon/icon-128.png" width="128" />
        <icon height="256" src="res/osx/icon/icon-256.png" width="256" />
        <icon height="512" src="res/osx/icon/icon-512.png" width="512" />
        <icon height="1024" src="res/osx/icon/icon-1024.png" width="1024" />
    </platform>
</widget>